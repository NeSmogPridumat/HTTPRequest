<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/group_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/group_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            android:id="@+id/view2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/colorGray"
                            android:innerRadius="0dp"
                            android:shape="ring"
                            app:cardCornerRadius="60dp">

                            <ImageView
                                android:id="@+id/group_image_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/noimage"
                                android:scaleType="centerCrop"></ImageView>

                        </android.support.v7.widget.CardView>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/group_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/group_name"
                            android:textColor="@android:color/black"
                            android:textSize="42sp" />

                        <TextView
                            android:id="@+id/group_description_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:lines="4"
                            android:text="@string/description"
                            android:textColor="@color/colorGray" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_users_group"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/ic_users_blue"
                        android:elevation="15dp"
                        android:paddingStart="16dp"
                        android:textColor="@color/colorDarkBlue"
                        android:textSize="21dp" />

                    <Button
                        android:id="@+id/button_subgroup"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_background"
                        android:drawableStart="@drawable/ic_subgroup_blue"
                        android:elevation="30dp"
                        android:paddingStart="16dp"
                        android:textColor="@color/colorDarkBlue"
                        android:textSize="21dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/group_event_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxHeight="650dp"
                    android:orientation="vertical"></android.support.v7.widget.RecyclerView>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/progressBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:clickable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@mipmap/ic_launcher"
            android:theme="@android:style/Widget.ProgressBar.Large.Inverse"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>

