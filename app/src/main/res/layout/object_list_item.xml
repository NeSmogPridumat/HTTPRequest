<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

  <FrameLayout
      android:layout_width="80dp"
      android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:innerRadius="0dp"
        android:shape="ring"
        app:cardCornerRadius="40dp"
        android:layout_gravity="center">

      <ImageView
          android:id="@+id/object_list_image_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true">

      </ImageView>

    </android.support.v7.widget.CardView>

  </FrameLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/object_list_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:text="Object Title" />

    <TextView
        android:id="@+id/object_list_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="4dp"
        android:textColor="@color/colorGray"
        tools:text="Object Description"
        />
  </LinearLayout>

</LinearLayout>