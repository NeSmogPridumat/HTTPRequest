<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:id="@+id/linear_layout_object_item">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:innerRadius="0dp"
            android:shape="ring"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/object_list_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/noimage"
                android:scaleType="centerCrop">

            </ImageView>

        </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/object_list_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:text="Object Title"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/object_list_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:textColor="@android:color/black"
                tools:text="Object Description" />

</LinearLayout>